@{ var homeUrl = Href("~/");
    var urlHelper = new UrlHelper(Html.ViewContext.RequestContext);
    if (urlHelper.Content("~/") == urlHelper.Content(Request.AppRelativeCurrentExecutionFilePath)) {
        <h1 id="branding">
            <a href="@homeUrl">
                @WorkContext.CurrentSite.SiteName
            </a>
        </h1>
    }
    else {
        <span id="branding">
            <a href="@homeUrl">
                @WorkContext.CurrentSite.SiteName
            </a>
        </span>
    }
}